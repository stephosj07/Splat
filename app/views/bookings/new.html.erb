<div class="container">
  <h1>Book your spot</h1>
  <%= simple_form_for [@camping_spot, @booking] do |f| %>
    <%= f.input :arrival_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :departure_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.submit "Confirm booking", class: 'btn btn-primary' %>
  <% end %>
</div>
